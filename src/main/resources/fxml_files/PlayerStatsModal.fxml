<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs222.gui.controllers.PlayerStatsModalController" prefWidth="600" prefHeight="400" style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="20" right="10" bottom="10" left="20"/>
            </padding>
            <Label fx:id="tabLbl" text="Stats" textFill="#e0e0e0"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="playerLabel" text="Player Name" textFill="white">
                <font>
                    <Font size="20"/>
                </font>
            </Label>
            <HBox spacing="10">
                <Button fx:id="seasonStatsBtn" text="Season" onAction="#setSeasonStatView" prefWidth="80" prefHeight="30" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;"/>
                <Button fx:id="weeklyStatsBtn" text="Weekly" onAction="#setWeeklyStatView" prefWidth="80" prefHeight="30" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;"/>
            </HBox>
<!-- Insert this after it's created... It's just a template... fx:id="statsDisplay"-->
            <HBox spacing="10" style="-fx-background-color: #3c3c3c; -fx-background-radius: 6;" prefHeight="200" prefWidth="560"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="15" bottom="15"/>
            </padding>
            <Button fx:id="cancelButton" text="Close" prefWidth="120" prefHeight="40" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;"/>
        </HBox>
    </bottom>
</BorderPane>

