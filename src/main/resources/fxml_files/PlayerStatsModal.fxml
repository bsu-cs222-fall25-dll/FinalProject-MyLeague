<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="850.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.bsu.cs222.gui.controllers.PlayerStatsModalController"
            style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="20" right="10" bottom="10" left="20" />
            </padding>
            <Label fx:id="tabLbl" text="Season Stats" style="-fx-font-size: 18px;" textFill="#e0e0e0" />
        </HBox>
    </top>

    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.4" style="-fx-background-color: transparent;">
            <VBox spacing="15" style="-fx-background-color: #2b2b2b;">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20" />
                </padding>

                <Label fx:id="playerLabel" text="Player Name" textFill="white" style="-fx-font-size: 22px;" />

                <HBox spacing="10">
                    <Button fx:id="seasonStatsBtn" text="Season"
                            onAction="#setSeasonStatView"
                            prefHeight="30" prefWidth="80"
                            style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                        <tooltip>
                            <Tooltip text="View season stats" />
                        </tooltip>
                    </Button>

                    <Button fx:id="weeklyStatsBtn" text="Last Week"
                            onAction="#setWeeklyStatView"
                            prefHeight="30" prefWidth="90"
                            style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                        <tooltip>
                            <Tooltip text="View weekly stats" />
                        </tooltip>
                    </Button>

                    <Button fx:id="compareButton" text="Compare"
                            onAction="#toggleComparePanel"
                            prefHeight="30" prefWidth="90"
                            style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                        <tooltip>
                            <Tooltip text="Compare this player with another" />
                        </tooltip>
                    </Button>
                </HBox>

                <GridPane hgap="15" vgap="10" style="-fx-background-color: #3c3c3c; -fx-background-radius: 8;">
                    <padding>
                        <Insets top="15" right="20" bottom="15" left="20" />
                    </padding>

                    <Label text="Pass Yards:" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="passYdsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Pass TDs:" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="passTdValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Interceptions:" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="interceptionsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Rush Yards:" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <Label fx:id="rushYdsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <Label text="Rush TDs:" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <Label fx:id="rushTdValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                    <Label text="Rec Yards:" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                    <Label fx:id="recYdsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="0" GridPane.columnIndex="5"/>

                    <Label text="Receptions:" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                    <Label fx:id="receptionsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="1" GridPane.columnIndex="5"/>

                    <Label text="Receiving TDs:" textFill="white" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
                    <Label fx:id="tdValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="2" GridPane.columnIndex="5"/>

                    <Label text="FG Made:" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="fgMadeValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="FG Attempts:" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                    <Label fx:id="fgAttemptsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                    <Label text="XP Made:" textFill="white" GridPane.rowIndex="3" GridPane.columnIndex="4"/>
                    <Label fx:id="xpMadeValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="3" GridPane.columnIndex="5"/>

                    <Label text="XP Attempts:" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="4"/>
                    <Label fx:id="xpAttemptsValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="4" GridPane.columnIndex="5"/>

                    <Label text="Fumbles:" textFill="white" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Label fx:id="fumblesValueLbl" text="0" textFill="#f0f0f0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <VBox fx:id="playerSelectPanel" visible="false" managed="false"
                  spacing="10"
                  style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-width: 0 0 0 1;">
                <padding>
                    <Insets top="15" right="10" bottom="15" left="10" />
                </padding>

                <Label text="Compare with..." style="-fx-font-size: 14px;" textFill="#e0e0e0" />

                <HBox spacing="5">
                    <TextField fx:id="searchField" promptText="Enter player name"
                               style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-background-radius: 6; -fx-prompt-text-fill: #aaaaaa;" />

                    <ComboBox fx:id="positionFilter" prefWidth="70"
                              style="-fx-background-color: #3c3c3c; -fx-text-fill: white;" />

                    <ComboBox fx:id="teamFilter" prefWidth="70"
                              style="-fx-background-color: #3c3c3c; -fx-text-fill: white;" />
                </HBox>

                <ListView fx:id="listView"
                          prefWidth="180"
                          style="-fx-background-color: #3c3c3c; -fx-control-inner-background: #3c3c3c; -fx-text-fill: white; -fx-background-radius: 6;" />
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="15" bottom="15" />
            </padding>
            <Button fx:id="cancelButton"
                    text="Close"
                    prefWidth="120"
                    prefHeight="40"
                    style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;" />
        </HBox>
    </bottom>
</BorderPane>
