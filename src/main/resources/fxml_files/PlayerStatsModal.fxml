<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400" prefWidth="700" style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs222.gui.controllers.PlayerStatsModalController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="10" top="20" />
            </padding>
            <Label fx:id="tabLbl" style="-fx-font-size: 18px;" text="Player Stats" textFill="#e0e0e0" />
        </HBox>
    </top>

    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.40068886337543047" style="-fx-background-color: transparent;">
            <VBox prefHeight="268.0" prefWidth="511.0" spacing="15" style="-fx-background-color: #2b2b2b;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Label fx:id="playerLabel" text="Player Name" textFill="white">
                    <font>
                        <Font size="20" />
                    </font>
                </Label>
                <HBox spacing="10">
                    <Button fx:id="seasonStatsBtn" onAction="#setSeasonStatView" prefHeight="30" prefWidth="80" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;" text="Season">
                    <tooltip>
                        <Tooltip text="View season stats" />
                    </tooltip>
                    </Button>

                    <Button fx:id="weeklyStatsBtn" onAction="#setWeeklyStatView" prefHeight="30" prefWidth="80" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;" text="Weekly">
                    <tooltip>
                        <Tooltip text="View weekly stats" />
                    </tooltip>
                    </Button>

                    <Button fx:id="compareButton" onAction="#toggleComparePanel" prefHeight="30" prefWidth="90" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;" text="Compare">
                        <tooltip>
                            <Tooltip text="Compare this player with another" />
                        </tooltip>
                    </Button>
                </HBox>

                <HBox prefHeight="200" prefWidth="560" spacing="10" style="-fx-background-color: #3c3c3c; -fx-background-radius: 6;" />
            </VBox>
             <VBox fx:id="playerSelectPanel" managed="false" spacing="10" style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-width: 0 0 0 1;" visible="false">
                 <padding>
                     <Insets bottom="15" left="10" right="10" top="15" />
                 </padding>
                 <Label style="-fx-font-size: 14px;" text="Compare with..." textFill="#e0e0e0" />
                 <HBox>
                     <TextField promptText="Enter player name" style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-background-radius: 6; -fx-prompt-text-fill: #aaaaaa;">
                         <tooltip>
                             <Tooltip text="Enter a player's name to compare stats" />
                         </tooltip>
                     </TextField>
                     <ComboBox prefHeight="26.0" prefWidth="65.0" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                         <tooltip>
                             <Tooltip text="Filter players by position (QB, RB, WR, TE, K)" />
                         </tooltip>
                     </ComboBox>

                     <ComboBox prefWidth="65.0" GridPane.columnIndex="5" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                         <tooltip>
                             <Tooltip text="Filter players by NFL team" />
                         </tooltip>
                     </ComboBox>
                 </HBox>

                 <ListView fx:id="listView" prefWidth="180" style="-fx-background-color: #3c3c3c; -fx-control-inner-background: #3c3c3c; -fx-text-fill: white; -fx-background-radius: 6;" />
             </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="15" top="15" />
            </padding>
            <Button fx:id="cancelButton" prefHeight="40" prefWidth="120" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;" text="Close">
            <tooltip>
                <Tooltip text="Close popup" />
            </tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
