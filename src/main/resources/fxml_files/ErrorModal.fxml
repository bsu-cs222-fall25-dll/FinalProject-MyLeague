<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="180" prefWidth="360" style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Error" BorderPane.alignment="CENTER_LEFT">
            <font>
                <Font name="System Bold" size="16" />
            </font>
            <padding>
                <Insets bottom="5" left="20" top="15" />
            </padding>
            <textFill>#e0e0e0</textFill>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="15" />
            </padding>
            <Label fx:id="errorLbl" alignment="CENTER" contentDisplay="CENTER" maxWidth="250.0" style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px;" textAlignment="CENTER" wrapText="true">
            <font>
               <Font size="15.0" />
            </font></Label>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15" top="10" />
            </padding>
            <Button fx:id="closeButton" prefWidth="100" style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 13px;" text="Close">
                <tooltip>
                    <Tooltip text="Close error pop-up" />
                </tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
