<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="380" prefWidth="550"
            style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Create League" BorderPane.alignment="CENTER_LEFT">
            <font><Font name="System Bold" size="20"/></font>
            <padding><Insets top="20" left="20" bottom="10"/></padding>
            <textFill>#e0e0e0</textFill>
        </Label>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding><Insets top="15" left="20" right="20"/></padding>
            <VBox spacing="6" alignment="CENTER">
                <Label text="League Name" textFill="WHITE"/>
                <TextField fx:id="nameField" maxWidth="260" promptText="Enter fantasy league name"
                           style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-background-radius: 6;">
                    <tooltip><Tooltip text="Enter a name for your fantasy league"/></tooltip>
                </TextField>
            </VBox>
            <GridPane hgap="50" vgap="15" alignment="CENTER">
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="QB" textFill="WHITE"/>
                    <TextField fx:id="qbField" text="1" prefWidth="80"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="RB" textFill="WHITE"/>
                    <TextField fx:id="rbField" text="2" prefWidth="80"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="WR" textFill="WHITE"/>
                    <TextField fx:id="wrField" text="2" prefWidth="80"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="TE" textFill="WHITE"/>
                    <TextField fx:id="teField" text="1" prefWidth="80"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="K" textFill="WHITE"/>
                    <TextField fx:id="kField" text="1" prefWidth="80"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label text="FLEX" textFill="WHITE"/>
                    <TextField fx:id="flexField" text="1" prefWidth="80"/>
                </VBox>
            </GridPane>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding><Insets top="20" bottom="25"/></padding>

            <Button fx:id="createButton" prefWidth="120"
                    style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px;"
                    text="Add">
                <tooltip><Tooltip text="Create your fantasy league"/></tooltip>
            </Button>

            <Button fx:id="cancelButton" prefWidth="120"
                    style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px;"
                    text="Cancel">
                <tooltip><Tooltip text="Close popup"/></tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
