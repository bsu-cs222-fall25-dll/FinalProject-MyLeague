<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400" prefWidth="600"
            style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Set Scoring Coefficients" BorderPane.alignment="CENTER_LEFT">
            <font>
                <Font name="System Bold" size="20" />
            </font>
            <padding>
                <Insets top="20" left="20" bottom="10" />
            </padding>
            <textFill>#e0e0e0</textFill>
        </Label>
    </top>
    <center>
        <GridPane hgap="30" vgap="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" left="30" right="30" bottom="20"/>
            </padding>
            <VBox spacing="6" GridPane.columnIndex="0">
                <Label text="Rush Yards" textFill="WHITE"/>
                <TextField fx:id="rushYards" prefWidth="80" text=".1"/>

                <Label text="Rec Yards" textFill="WHITE"/>
                <TextField fx:id="recYards" prefWidth="80" text=".1"/>

                <Label text="Pass Yards" textFill="WHITE"/>
                <TextField fx:id="passYards" prefWidth="80" text=".04"/>
            </VBox>
            <VBox spacing="6" GridPane.columnIndex="1">
                <Label text="Rush TDs" textFill="WHITE"/>
                <TextField fx:id="rushTds" prefWidth="80" text="7"/>

                <Label text="Rec TDs" textFill="WHITE"/>
                <TextField fx:id="recTds" prefWidth="80" text="7"/>

                <Label text="Pass TDs" textFill="WHITE"/>
                <TextField fx:id="passTds" prefWidth="80" text="4"/>
            </VBox>
            <VBox spacing="6" GridPane.columnIndex="2">
                <Label text="Receptions" textFill="WHITE"/>
                <TextField fx:id="receptions" prefWidth="80" text="1"/>

                <Label text="Interceptions" textFill="WHITE"/>
                <TextField fx:id="interceptions" prefWidth="80" text="-2"/>

                <Label text="Fumbles" textFill="WHITE"/>
                <TextField fx:id="fumbles" prefWidth="80" text="-2"/>
            </VBox>
            <VBox spacing="6" GridPane.columnIndex="3">
                <Label text="XP Made" textFill="WHITE"/>
                <TextField fx:id="xpMade" prefWidth="80" text="2"/>

                <Label text="FG Made" textFill="WHITE"/>
                <TextField fx:id="fgMade" prefWidth="80" text="4"/>
            </VBox>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="25" top="20"/>
            </padding>
            <Button fx:id="createLeague" prefWidth="120"
                    style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px;"
                    text="Create League">
                <tooltip><Tooltip text="Set your fantasy league scoring coefficients"/></tooltip>
            </Button>
            <Button fx:id="cancelButton" prefWidth="120"
                    style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px;"
                    text="Cancel">
                <tooltip><Tooltip text="Close popup"/></tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
