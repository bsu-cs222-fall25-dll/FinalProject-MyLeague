<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="420" prefHeight="220"
            style="-fx-background-color: #2b2b2b; -fx-border-color: #3c3c3c; -fx-border-radius: 10; -fx-background-radius: 10;">
    <top>
        <Label text="Select Position" BorderPane.alignment="CENTER_LEFT">
            <font>
                <Font name="System Bold" size="16" />
            </font>
            <padding>
                <Insets top="15" left="20" bottom="5" />
            </padding>
            <textFill>#e0e0e0</textFill>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" bottom="10" />
            </padding>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="qbButton" text="QB" disable="true"
                        prefWidth="65" prefHeight="35"
                        style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                <tooltip>
                    <Tooltip text="Quarterback"/>
                </tooltip>
                </Button>

                <Button fx:id="rbButton" text="RB" disable="true"
                        prefWidth="65" prefHeight="35"
                        style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                <tooltip>
                    <Tooltip text="Running Back"/>
                </tooltip>
                </Button>

                <Button fx:id="wrButton" text="WR" disable="true"
                        prefWidth="65" prefHeight="35"
                        style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                <tooltip>
                    <Tooltip text="Wide Receiver"/>
                </tooltip>
                </Button>

                <Button fx:id="teButton" text="TE" disable="true"
                        prefWidth="65" prefHeight="35"
                        style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                <tooltip>
                    <Tooltip text="Tight End"/>
                </tooltip>
                </Button>

            </HBox>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="kButton" text="K" disable="true"
                        prefWidth="65" prefHeight="35"
                        style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                <tooltip>
                    <Tooltip text="Kicker"/>
                </tooltip>
                </Button>

                <Button fx:id="flexButton" text="FLEX" disable="true"
                        prefWidth="80" prefHeight="35"
                        style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6;">
                <tooltip>
                    <Tooltip text="Flex"/>
                </tooltip>
                </Button>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="15" />
            </padding>
            <Button fx:id="cancelButton"
                    text="Cancel"
                    prefWidth="120"
                    style="-fx-background-color: #4a4a4a; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 13px;">
            <tooltip>
                <Tooltip text="Close popup"/>
            </tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
