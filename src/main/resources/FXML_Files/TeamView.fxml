         </VBox.margin>
            <tooltip>
                <Tooltip text="Open player viewer"/>
            </tooltip>
        </Button>
        <ComboBox fx:id="leagueSelector" prefHeight="26.0" prefWidth="90.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
            <tooltip>
                <Tooltip text="Select a league"/>
            </tooltip>
        </ComboBox>
        <ComboBox fx:id="teamSelector" prefHeight="26.0" prefWidth="90.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
            <tooltip>
                <Tooltip text="Select a team"/>
            </tooltip>
        </ComboBox>
    </VBox>
    <ListView id="listView" fx:id="listView" prefHeight="400.0" prefWidth="500.0" GridPane.columnIndex="3" GridPane.columnSpan="3" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
