            <Tooltip text="Filter by player position"/>
        </tooltip>
    </ComboBox>
   <Button fx:id="scoreButton" mnemonicParsing="false" onAction="#calculateTeamScore" prefWidth="65.0" text="Calculate" GridPane.columnIndex="5">
       <tooltip>
           <Tooltip text="Calculate team score"/>
       </tooltip>
   </Button>
